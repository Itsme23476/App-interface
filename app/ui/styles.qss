/* Modern Sidebar UI Theme - Lumina */

/* ==================== Global Colors and Settings ==================== */
* {
    background-color: #0F0F0F;
    color: #E0E0E0;
    font-family: "Segoe UI", "SF Pro Display", "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    selection-background-color: #7C4DFF;
    selection-color: #FFFFFF;
}

/* ==================== Main Window & Pages ==================== */
QMainWindow, QDialog {
    background-color: #0F0F0F;
}

#searchPage, #indexPage, #settingsPage {
    background-color: #0F0F0F;
}

#pageStack {
    background-color: #0F0F0F;
}

/* ==================== Sidebar ==================== */
#sidebar {
    background-color: #FAFBFC;
    border-right: 1px solid #E8E8E8;
}

#logoContainer {
    background-color: transparent;
}

#logoIcon {
    font-size: 24px;
    color: #7C4DFF;
    background: transparent;
}

#logoText {
    font-size: 20px;
    font-weight: 700;
    color: #1A1A1A;
    background: transparent;
    letter-spacing: -0.5px;
}

#navContainer {
    background-color: transparent;
}

#navButton {
    background: transparent;
    border: none;
    border-left: 3px solid transparent;
    border-radius: 0px;
    text-align: left;
    padding: 14px 16px;
    color: #666666;
    font-size: 14px;
    font-weight: 500;
}

#navButton:hover {
    background-color: rgba(124, 77, 255, 0.05);
    color: #4A4A4A;
}

#navButton:checked {
    background-color: rgba(124, 77, 255, 0.08);
    border-left: 3px solid #7C4DFF;
    color: #7C4DFF;
    font-weight: 600;
}

#accountContainer {
    background-color: #F0F0F0;
    border-top: 1px solid #E0E0E0;
}

#avatarCircle {
    background-color: #7C4DFF;
    color: white;
    font-size: 14px;
    font-weight: 600;
    border-radius: 20px;
}

#accountName {
    color: #1A1A1A;
    font-size: 13px;
    font-weight: 600;
    background: transparent;
}

#accountPlan {
    color: #7C4DFF;
    font-size: 11px;
    font-weight: 500;
    background: transparent;
}

/* ==================== Search Page - Hero Section ==================== */
#heroHeading {
    font-size: 36px;
    font-weight: 700;
    color: #FFFFFF;
    background: transparent;
    letter-spacing: -0.5px;
    margin-bottom: 8px;
}

#heroSubtitle {
    font-size: 17px;
    color: #909090;
    background: transparent;
    margin-bottom: 16px;
}

/* Modern Search Bar */
#searchContainer {
    background-color: #FFFFFF;
    border-radius: 28px;
    border: 1px solid #E0E0E0;
}

#searchContainer:focus-within {
    border: 2px solid #7C4DFF;
}

#heroSearchInput {
    border: none;
    background: transparent;
    font-size: 16px;
    color: #1A1A1A;
    padding: 8px 0;
}

#heroSearchInput::placeholder {
    color: #A0A0A0;
}

/* Large Search Bar (Gemini-style) */
#searchContainerLarge {
    background-color: #252530;
    border-radius: 37px;
    border: 1px solid #3A3A4A;
}

#searchContainerLarge:focus-within {
    border: 2px solid #7C4DFF;
    background-color: #2A2A3A;
}

#heroSearchInputLarge {
    border: none;
    background: transparent;
    font-size: 18px;
    color: #FFFFFF;
    padding: 12px 0;
}

#heroSearchInputLarge::placeholder {
    color: #808090;
}

#aiIndicatorLarge {
    color: #7C4DFF;
    font-size: 14px;
    font-weight: 600;
    background: transparent;
    padding: 8px 12px;
}

#searchSubmitBtnLarge {
    background: #7C4DFF;
    border-radius: 25px;
    border: none;
    color: white;
    font-size: 22px;
    font-weight: bold;
}

#searchSubmitBtnLarge:hover {
    background: #9575FF;
}

#searchSubmitBtnLarge:pressed {
    background: #6A3DE8;
}

#aiIndicator {
    color: #7C4DFF;
    font-size: 12px;
    font-weight: 600;
    background: transparent;
    padding: 4px 8px;
}

#searchSubmitBtn {
    background: #7C4DFF;
    border-radius: 20px;
    border: none;
    color: white;
    font-size: 18px;
    font-weight: bold;
}

#searchSubmitBtn:hover {
    background: #9575FF;
}

#searchSubmitBtn:pressed {
    background: #6A3DE8;
}

/* Filter Chips */
#filterChip {
    background-color: #1E1E1E;
    border: 1px solid #333333;
    border-radius: 20px;
    padding: 8px 16px;
    color: #A0A0A0;
    font-size: 13px;
    font-weight: 500;
}

#filterChip:hover {
    border-color: #7C4DFF;
    color: #FFFFFF;
}

#filterChip:checked {
    background-color: rgba(124, 77, 255, 0.15);
    border-color: #7C4DFF;
    color: #7C4DFF;
}

/* ==================== Index Page ==================== */
#pageTitle {
    font-size: 24px;
    font-weight: 700;
    color: #FFFFFF;
    background: transparent;
}

#pageSubtitle {
    font-size: 14px;
    color: #808080;
    background: transparent;
}

/* Drop Zone */
#dropZone {
    border: 2px dashed rgba(124, 77, 255, 0.4);
    border-radius: 20px;
    background-color: #1A1A1A;
    padding: 30px;
}

#dropZone:hover {
    border-color: #7C4DFF;
    background-color: rgba(124, 77, 255, 0.08);
}

#dropIcon {
    background-color: rgba(124, 77, 255, 0.15);
    border-radius: 12px;
    font-size: 28px;
    color: #7C4DFF;
}

#dropTitle {
    font-size: 16px;
    font-weight: 600;
    color: #7C4DFF;
    background: transparent;
}

#dropSubtitle {
    font-size: 13px;
    color: #808080;
    background: transparent;
}

/* Large Drop Zone for simplified Index page */
#dropZoneLarge {
    border: 2px dashed rgba(124, 77, 255, 0.5);
    border-radius: 24px;
    background-color: #1A1A1A;
    padding: 50px;
    min-height: 300px;
}

#dropZoneLarge:hover {
    border-color: #7C4DFF;
    border-width: 3px;
    background-color: rgba(124, 77, 255, 0.1);
}

#dropIconLarge {
    background: transparent;
}

#dropTitleLarge {
    font-size: 22px;
    font-weight: 600;
    color: #7C4DFF;
    background: transparent;
}

#dropSubtitleLarge {
    font-size: 15px;
    color: #808080;
    background: transparent;
}

/* View Indexed Files Button */
#viewFilesButton {
    background-color: #7C4DFF;
    color: white;
    border: none;
    border-radius: 26px;
    font-size: 16px;
    font-weight: 600;
    padding: 14px 32px;
}

#viewFilesButton:hover {
    background-color: #9575FF;
}

#viewFilesButton:pressed {
    background-color: #6A3DE8;
}

/* Files Overlay Dialog */
QDialog#filesOverlay {
    background-color: #1a1a2e;
    border-radius: 16px;
}

/* Locations Card */
#locationsCard {
    background-color: #1A1A1A;
    border: 1px solid #2A2A2A;
    border-radius: 12px;
}

#cardTitle {
    font-size: 14px;
    font-weight: 600;
    color: #FFFFFF;
    background: transparent;
}

#activeIndicator {
    font-size: 12px;
    color: #4CAF50;
    background: transparent;
}

#indexedPathsList {
    background-color: transparent;
    border: none;
}

#indexedPathsList::item {
    padding: 10px 12px;
    border-radius: 8px;
    color: #C0C0C0;
}

#indexedPathsList::item:selected {
    background-color: rgba(124, 77, 255, 0.15);
    color: #7C4DFF;
}

#sectionSeparator {
    background-color: #2A2A2A;
    border: none;
}

/* ==================== Inputs (LineEdit, TextEdit) ==================== */
QLineEdit, QTextEdit {
    background-color: #1E1E1E;
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 10px 12px;
    color: #FFFFFF;
    selection-background-color: #7C4DFF;
    selection-color: #FFFFFF;
}

QLineEdit:focus, QTextEdit:focus {
    border: 1px solid #7C4DFF;
    background-color: #252525;
}

/* ComboBox */
QComboBox {
    background-color: #1E1E1E;
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 8px 12px;
    color: #FFFFFF;
    min-height: 20px;
}

QComboBox:hover {
    border-color: #7C4DFF;
}

QComboBox:focus {
    border-color: #7C4DFF;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 6px solid #808080;
    margin-right: 8px;
}

QComboBox QAbstractItemView {
    background-color: #1E1E1E;
    border: 1px solid #333333;
    border-radius: 8px;
    selection-background-color: rgba(124, 77, 255, 0.2);
    selection-color: #7C4DFF;
    padding: 4px;
}

/* ==================== Buttons ==================== */
QPushButton {
    background-color: #1E1E1E;
    border: 1px solid #333333;
    border-radius: 8px;
    padding: 10px 20px;
    color: #E0E0E0;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #7C4DFF;
    color: #FFFFFF;
    border: 1px solid #7C4DFF;
}

QPushButton:pressed {
    background-color: #6A3DE8;
    border: 1px solid #6A3DE8;
}

QPushButton:disabled {
    background-color: #1A1A1A;
    color: #555555;
    border: 1px solid #222222;
}

/* Primary Button */
QPushButton#primaryButton {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #7C4DFF,
        stop: 1 #9575FF
    );
    border: none;
    border-radius: 8px;
    color: #FFFFFF;
    font-weight: 600;
}

QPushButton#primaryButton:hover {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #9575FF,
        stop: 1 #B39DFF
    );
}

QPushButton#primaryButton:pressed {
    background: #6A3DE8;
}

QPushButton#primaryButton:disabled {
    background: #2A2A2A;
    color: #606060;
}

/* Secondary Button */
QPushButton#secondaryButton {
    background-color: transparent;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    color: #A0A0A0;
    font-weight: 500;
}

QPushButton#secondaryButton:hover {
    border-color: #7C4DFF;
    color: #7C4DFF;
    background-color: rgba(124, 77, 255, 0.08);
}

/* Link Button */
#linkButton {
    background: transparent;
    border: none;
    color: #7C4DFF;
    font-size: 13px;
    font-weight: 500;
    padding: 4px 8px;
}

#linkButton:hover {
    color: #9575FF;
}

/* ==================== Tables ==================== */
QTableWidget, #searchResultsTable, #filesTable {
    background-color: #0F0F0F;
    alternate-background-color: #1A1A1A;
    border: none;
    gridline-color: transparent;
    selection-background-color: #1E1E1E;
    selection-color: #FFFFFF;
    outline: none;
}

QTableWidget::item {
    padding: 12px 8px;
    border-bottom: 1px solid #1E1E1E;
}

QTableWidget::item:selected {
    background-color: rgba(124, 77, 255, 0.1);
    color: #FFFFFF;
    border: none;
}

QTableWidget::item:focus {
    background-color: rgba(124, 77, 255, 0.15);
    border: none;
    outline: none;
}

QTableWidget::item:hover {
    background-color: #1A1A1A;
}

/* Table Header */
QHeaderView::section {
    background-color: #0F0F0F;
    color: #808080;
    padding: 12px 8px;
    border: none;
    border-bottom: 1px solid #2A2A2A;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* ==================== Scrollbars ==================== */
QScrollBar:vertical {
    border: none;
    background: #0F0F0F;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #333333;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background: #7C4DFF;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background: #0F0F0F;
    height: 8px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background: #333333;
    min-width: 20px;
    border-radius: 4px;
}

QScrollBar::handle:horizontal:hover {
    background: #7C4DFF;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ==================== GroupBox ==================== */
QGroupBox {
    border: 1px solid #2A2A2A;
    border-radius: 8px;
    margin-top: 1.5em;
    padding-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #7C4DFF;
    font-weight: 600;
}

/* ==================== Labels ==================== */
QLabel {
    color: #E0E0E0;
    background: transparent;
}

QLabel#secondaryLabel, #infoLabel {
    color: #808080;
    font-size: 12px;
}

#searchStatsLabel {
    color: #808080;
    font-size: 13px;
    background: transparent;
}

/* ==================== Progress Bar ==================== */
QProgressBar, #indexProgressBar {
    border: none;
    background-color: #2A2A2A;
    border-radius: 10px;
    min-height: 20px;
    max-height: 24px;
    text-align: center;
    font-weight: 600;
    font-size: 11px;
    color: #FFFFFF;
}

QProgressBar::chunk {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #7C4DFF,
        stop: 1 #9575FF
    );
    border-radius: 10px;
}

#percentLabel {
    font-size: 18px;
    font-weight: 700;
    color: #7C4DFF;
    background: transparent;
}

#progressLabel {
    font-size: 12px;
    color: #808080;
    background: transparent;
}

/* Paused Progress Bar */
QProgressBar[paused="true"] {
    border: 1px solid #FFA500;
}

QProgressBar[paused="true"]::chunk {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 #FF8C00,
        stop: 1 #FFA500
    );
}

/* ==================== Tooltips ==================== */
QToolTip {
    background-color: #1E1E1E;
    color: #FFFFFF;
    border: 1px solid #333333;
    border-radius: 4px;
    padding: 6px 10px;
}

/* ==================== Status Bar ==================== */
#statusBar {
    background-color: #0F0F0F;
    border-top: 1px solid #1E1E1E;
    color: #808080;
}

/* ==================== Quick Actions Bar ==================== */
#quickActionsBar {
    background-color: #1A1A1A;
    border: 1px solid #2A2A2A;
    border-radius: 8px;
    margin: 4px 0;
}

#selectionLabel {
    color: #7C4DFF;
    font-size: 13px;
    font-weight: 600;
    background: transparent;
    padding: 4px 8px;
}

#quickActionBtn {
    background-color: #252525;
    border: 1px solid #3A3A3A;
    border-radius: 6px;
    padding: 6px 12px;
    color: #D0D0D0;
    font-size: 12px;
    font-weight: 500;
}

#quickActionBtn:hover {
    background-color: #7C4DFF;
    color: #FFFFFF;
    border-color: #7C4DFF;
}

#quickActionBtn:pressed {
    background-color: #6A3DE8;
}

#quickActionBtnSecondary {
    background-color: transparent;
    border: 1px solid #3A3A3A;
    border-radius: 6px;
    padding: 6px 12px;
    color: #808080;
    font-size: 12px;
    font-weight: 500;
}

#quickActionBtnSecondary:hover {
    border-color: #7C4DFF;
    color: #7C4DFF;
    background-color: rgba(124, 77, 255, 0.1);
}

/* ==================== Quick Search Overlay ==================== */
#overlayFrame {
    background-color: #0F0F0F;
    border: 1px solid #2A2A2A;
    border-radius: 16px;
}

#overlayInput {
    font-size: 20px;
    padding: 12px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #2A2A2A;
    color: #FFFFFF;
}

#overlayInput:focus {
    border-bottom: 1px solid #7C4DFF;
}

#overlayResults {
    background-color: transparent;
    border: none;
}

#overlayResults::item {
    padding: 10px 12px;
    border-radius: 8px;
    color: #A0A0A0;
}

#overlayResults::item:selected {
    background-color: #1E1E1E;
    color: #FFFFFF;
    border: 1px solid #7C4DFF;
}

/* ==================== Auth Dialog ==================== */
#authDialog {
    background-color: #0F0F0F;
}

#authContainer, #authPage, #authStack {
    background-color: transparent;
}

#authLogo {
    font-size: 48px;
    background: transparent;
}

#authTitle {
    color: #FFFFFF;
    font-size: 24px;
    font-weight: 700;
    background: transparent;
}

#authSubtitle {
    color: #808080;
    font-size: 14px;
    background: transparent;
}

#authLabel {
    color: #A0A0A0;
    font-size: 13px;
    font-weight: 500;
    background: transparent;
}

#authInput {
    background-color: #1A1A1A;
    border: 2px solid #2A2A2A;
    border-radius: 10px;
    padding: 12px 16px;
    color: #FFFFFF;
    font-size: 14px;
}

#authInput:hover {
    border-color: #3A3A3A;
}

#authInput:focus {
    border-color: #7C4DFF;
    background-color: #1E1E1E;
}

#subscriptionCard {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 1,
        stop: 0 #1A1A2E,
        stop: 1 #151520
    );
    border: 1px solid #2A2A3A;
    border-radius: 16px;
}

#planBadge {
    color: #7C4DFF;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 2px;
    background: rgba(124, 77, 255, 0.15);
    border-radius: 20px;
    padding: 6px 16px;
}

#priceAmount {
    color: #FFFFFF;
    font-size: 42px;
    font-weight: 700;
    background: transparent;
}

#pricePeriod {
    color: #808080;
    font-size: 16px;
    background: transparent;
}

#featureLabel {
    color: #C0C0C0;
    font-size: 13px;
    background: transparent;
}

#errorLabel {
    color: #FF6B6B;
    font-size: 13px;
    background: transparent;
}

#statusLabel {
    color: #A0A0A0;
    font-size: 13px;
    background: transparent;
}
